<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:ai="http://ns.adobe.com/ai/2009"
		width="100%" height="100%">
	<fx:Metadata>[HostComponent("spark.components.TextInput")]</fx:Metadata>
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
		<s:State name="normalWithPrompt"/>
		<s:State name="disabledWithPrompt"/>
	</s:states>
	<s:BorderContainer backgroundAlpha="1" backgroundColor="#FFFFFF" 
					   width="100%" height="100%"
					   cornerRadius="0" borderAlpha="0"  />
	<s:RichText id="promptDisplay" includeIn="disabledWithPrompt,normalWithPrompt"
				x="5" y="5" fontFamily="Myriad Pro"/>
	<s:RichEditableText id="textDisplay" left="5" right="5"
						top="5" bottom="5"  fontFamily="Myriad Pro"
						heightInLines="1"/>
</s:Skin>
