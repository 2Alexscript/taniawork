<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:model="model.*"  
		backgroundColor="#22252a"
		viewActivate="view1_activateHandler(event)"
		menuKeyPressed="navigator.popToFirstView();" 
		backKeyPressed="navigator.popToFirstView();"
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="Store Detail">
	<s:navigationContent>
		<s:Image x="0" y="-2" click="navigator.popView();"
				>
			<s:source>
				<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/backbtnLow.png')"
										source240dpi="@Embed('assets/interfaceimages/multi/backbtnMed.png')"
										source320dpi="@Embed('assets/interfaceimages/multi/backbtnHigh.png')"/>
			</s:source>
		</s:Image>
	</s:navigationContent>
	<s:actionContent>	
		<s:Image x="0" y="-2" click="favPress();"
				 scaleMode="zoom"
				 smooth="true" id="favbtn" source="{favicon0}">
			
		</s:Image>
	</s:actionContent>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
	</fx:Style>
	<fx:Script>
		<![CDATA[
		
			import flash.geom.ColorTransform;
			import flash.sensors.Geolocation;
			
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			import mx.rpc.events.ResultEvent;
			
			import spark.components.supportClasses.StyleableTextField;
			import spark.events.IndexChangeEvent;
			import spark.events.ListEvent;
			import spark.events.ViewNavigatorEvent;
			
			[Bindable]
			public var actions:ArrayCollection;
			[Bindable]
			private var _data:Object;
			
			[Bindable]
			private var _addrString:String;
			
			[Bindable]
			private var _distString:String;
			
	
			
			[Embed("../assets/interfaceimages/original/sms.png")]
			private var smsIcon:Class;
			
			[Embed("../assets/interfaceimages/original/phone.png")]
			private var phoneIcon:Class;
			
			[Embed("../assets/interfaceimages/original/mail.png")]
			private var mailIcon:Class;
			
			[Embed("../assets/interfaceimages/original/map-marker.png")]
			private var mapIcon:Class;
			[Bindable]
			public var googleTravelUrl:String = "";
			import spark.filters.GlowFilter;
			[Bindable]
			public var picture:String = "";
			protected var sqlConnection:SQLConnection;
			[Bindable]
			public var emailGo:String = "";
			protected var g:Geolocation = new Geolocation();    
			[Bindable]
			public var mylat:Number = 53.59221;
			[Bindable]
			public var mylong:Number = -113.54009;
			[Bindable]
			public var busy:Boolean = true;
			public function profDown(ev:MouseEvent):void {
				var gl:spark.filters.GlowFilter = new GlowFilter(000000,1,5,5,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function profUp(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
				var s:String = "";
				
			}
			protected function onUpdate(event:GeolocationEvent):void
			{
				mylat = event.latitude;
				mylong = event.longitude;	
			}	
			protected function onRemove(event:ViewNavigatorEvent):void
			{
				g.removeEventListener(GeolocationEvent.UPDATE, onUpdate);                
			}
			public function view1_activateHandler(event:Event):void
			{
				try{
				
					if (Geolocation.isSupported)
					{
						g.addEventListener(GeolocationEvent.UPDATE, onUpdate);
						addEventListener(ViewNavigatorEvent.REMOVING,onRemove);	
					}
					else
					{	
						mylat = 53.55921;
						mylong = -113.54009;
					}		
				}
				catch(e:Error){
					mylat = 53.59221;
					mylong = -113.54009;
				}
				busy = true;
				try{
					sqlConnection = new SQLConnection();
					sqlConnection.open(File.applicationStorageDirectory.resolvePath("localuser.db"));
					var stmt:SQLStatement = new SQLStatement();
					stmt.sqlConnection = sqlConnection;
					stmt.text = "SELECT email, name, country, active FROM localuser where active = 'yes'";
					stmt.execute();
					var resData:ArrayCollection = new ArrayCollection(stmt.getResult().data);
					if (resData.length != 0){
						emailGo = resData[0].email;
					}
					else {
						emailGo = "none";
					}	
				}
				catch(e:Error) {
					emailGo = "none";
				}	
				
				
				
				if ((data.business_picture == "none")||(data.business_picture == "")){
					picture = "../assets/interfaceimages/multi/defaultlarge.png";
				}
				else {
					picture = data.business_picture;
				}

				if ((data.isfav == null)||(data.isfav == "null")||(data.isfav == "0")){
					data.isfav = "0";
					favbtn.source = favicon0;
				}
				else {
					data.isfav = "1";
					favbtn.source = favicon1;
				}
				
			
				
				googleTravelUrl = "http://maps.google.com/maps?daddr="+data.lat+","+data.longa;	
			}
			public function favPress():void {
				if (data.isfav == "1"){
					data.isfav = "0";
					deleteFav.send();
					favbtn.source = favicon0;
				}
				else if (data.isfav == "0"){
					data.isfav = "1";
					createFav.send();
					favbtn.source = favicon1;
				}
			}
			private function onViewDeactivate():void {
				//hide the map's infowindow
				this.parentApplication.map.infoWindow.hide();
				this.parentApplication.disableTraffic();
			}
			public function tOver(ev:MouseEvent):void {
				ev.currentTarget.setStyle("textDecoration","underline");
			}
			public function tOut(ev:MouseEvent):void {
				ev.currentTarget.setStyle("textDecoration","none");
			}
			
			public function gOver(ev:MouseEvent):void {
				var gl:GlowFilter = new GlowFilter(000000,0.4,20,20,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function gDown(ev:MouseEvent):void {
				var gl:GlowFilter = new GlowFilter(000000,0.4,20,20,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function gOut(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
			}
			
		]]>
	</fx:Script>	
	
<fx:Declarations>
	<s:HTTPService id="createFav" method="GET" resultFormat="array"
				   url="https://simplipay.ca/php/myfav/createFav.php"
				 >
		<s:request xmlns="">		
			<emailGo>{emailGo}</emailGo>	
			<id>{data.id}</id>	
		</s:request>
	</s:HTTPService>
	<s:HTTPService id="deleteFav" method="GET" resultFormat="array"
				   url="https://simplipay.ca/php/myfav/deleteFav.php"
				   >
		<s:request xmlns="">		
			<emailGo>{emailGo}</emailGo>	
			<id>{data.id}</id>	
		</s:request>
	</s:HTTPService>
	<s:MultiDPIBitmapSource id="favicon1"
							source160dpi="@Embed('assets/interfaceimages/multi/star1Low.png')"
							source240dpi="@Embed('assets/interfaceimages/multi/star1Med.png')"
							source320dpi="@Embed('assets/interfaceimages/multi/star1High.png')"/>
	<s:MultiDPIBitmapSource id="favicon0"
							source160dpi="@Embed('assets/interfaceimages/multi/star0Low.png')"
							source240dpi="@Embed('assets/interfaceimages/multi/star0Med.png')"
							source320dpi="@Embed('assets/interfaceimages/multi/star0High.png')"/>
	

</fx:Declarations>
	
	<s:Scroller  left="0" right="0" top="0" bottom="0" verticalScrollPolicy="off" horizontalScrollPolicy="off" >
		<s:VGroup  paddingLeft="10" paddingRight="10" top="0" bottom="0" gap="0" horizontalAlign="center">
			<s:Image x="21" width="80%" height="30%" scaleMode="stretch" smooth="true"
					 source="{picture}"/>
			<s:VGroup width="{img1.width}"  gap="8" horizontalAlign="center" paddingTop="10">
				<s:Label id="selectedTitle" left="14" right="2" top="13" color="#FFFFFF"
						 fontWeight="bold" text="{data.business_name}"/>
				<s:Label id="selectedTagLine" left="14" right="2" top="13" color="#FFFFFF"
						 fontWeight="normal" text="{data.business_tagline}"/>
				
				<s:BorderContainer height="100%" width="100%" horizontalCenter="0" bottom="25" backgroundAlpha="0" borderAlpha="0">
					<s:Image id="img1" horizontalCenter="0">
						<s:source>
							<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/storedetailinfobackLow.png')"
													source240dpi="@Embed('assets/interfaceimages/multi/storedetailinfobackMed.png')"
													source320dpi="@Embed('assets/interfaceimages/multi/storedetailinfobackHigh.png')"/>
						</s:source>
					</s:Image>
					<s:VGroup width="100%" height="50%" gap="7" horizontalCenter="0" paddingLeft="20"
							  paddingRight="20" verticalCenter="20">
						<s:HGroup width="100%" mouseDown="profDown(event)" mouseOut="profUp(event)" 
								  mouseOver="profUp(event)" verticalAlign="middle" mouseUp="profUp(event)"  
								  click="navigateToURL(new URLRequest('tel:'+data.business_number));" gap="0">
							<s:Image x="188" y="37">
								<s:source>
									<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/phoneLow.png')"
															source240dpi="@Embed('assets/interfaceimages/multi/phoneMed.png')"
															source320dpi="@Embed('assets/interfaceimages/multi/phoneHigh.png')"/>
								</s:source>
							</s:Image>
							<s:Label width="100%" color="#BEBEBE" text=" :   {data.business_number}"
									 verticalAlign="middle"/>
						</s:HGroup>
						
						<s:HGroup width="100%" mouseDown="profDown(event)" mouseOut="profUp(event)" 
								  mouseOver="profUp(event)" verticalAlign="middle" mouseUp="profUp(event)"  
								  click="navigateToURL(new URLRequest('mailto:'+data.email));"
								   gap="0">
							<s:Image x="276" y="37"
									 click="navigateToURL(new URLRequest('mailto:'+data.email));">
								<s:source>
									<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/mailLow.png')"
															source240dpi="@Embed('assets/interfaceimages/multi/mailMed.png')"
															source320dpi="@Embed('assets/interfaceimages/multi/mailHigh.png')"/>
								</s:source>
							</s:Image>
							<s:Label width="100%"
									 click="navigateToURL(new URLRequest('mailto:'+data.email));"
									 color="#BEBEBE" maxDisplayedLines="1" text=" :   {data.email}"
									 verticalAlign="middle"/>
						</s:HGroup>
						<s:HGroup width="100%" mouseDown="profDown(event)" mouseOut="profUp(event)" 
								  mouseOver="profUp(event)" verticalAlign="middle" mouseUp="profUp(event)"  
								  click="navigateToURL(new URLRequest(googleTravelUrl))"  gap="0">
							<s:Image x="231" y="37"
									 click="navigateToURL(new URLRequest(googleTravelUrl))">
								<s:source>
									<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/mappointLow.png')"
															source240dpi="@Embed('assets/interfaceimages/multi/mappointMed.png')"
															source320dpi="@Embed('assets/interfaceimages/multi/mappointHigh.png')"/>
								</s:source>
							</s:Image>
							<s:Label width="100%"
									 click="navigateToURL(new URLRequest(googleTravelUrl))"
									 color="#BEBEBE" maxDisplayedLines="1"
									 text=" :   {data.business_address1 + ', ' +data.business_city + ', ' +data.business_locality + ', ' +data.business_postalcode + ', ' +data.business_country}" 
									 verticalAlign="middle"/>
						</s:HGroup>
					</s:VGroup>
					
				</s:BorderContainer>
				
			</s:VGroup>
		</s:VGroup>
	
	</s:Scroller>
</s:View>