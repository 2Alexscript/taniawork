<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:s="library://ns.adobe.com/flex/spark" xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   width="296"  height="30" borderAlpha="0.5" creationComplete="init(event)" borderColor="#000000"  >
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			[Bindable]
			public var tipList:ArrayCollection = new ArrayCollection();
			
			protected function init(event:FlexEvent):void
			{
				tipList.addItem({img:"app:/assets/hslideblank.png"});
				tipList.addItem({img:"app:/assets/hslideblank.png"});
				tipList.addItem({img:"app:/assets/hslide1.png"});
				tipList.addItem({img:"app:/assets/hslide2.png"});
				tipList.addItem({img:"app:/assets/hslide3.png"});
				tipList.addItem({img:"app:/assets/hslide4.png"});
				tipList.addItem({img:"app:/assets/hslide5.png"});
				tipList.addItem({img:"app:/assets/hslide6.png"});
				tipList.addItem({img:"app:/assets/hslide7.png"});
				tipList.addItem({img:"app:/assets/hslide8.png"});
				tipList.addItem({img:"app:/assets/hslideblank.png"});
				tipList.addItem({img:"app:/assets/hslideblank.png"});
				tipScroller.dataProvider = tipList;
				
			}
			
		]]>
	</fx:Script>
	
	<s:List id="tipScroller" dataProvider="{tipList}"  width="100%" height="100%"
			verticalScrollPolicy="off" itemRenderer="components.sidescrolleritem"  direction="ltr">
		<s:layout>
			<s:HorizontalLayout gap="0"/>
		</s:layout>			
	</s:List>
	<s:Image bottom="-1" alpha="0.6" horizontalCenter="0" source="assets/hslideSelector.png"/>
</s:BorderContainer>
