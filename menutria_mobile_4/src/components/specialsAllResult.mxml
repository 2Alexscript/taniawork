<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				autoDrawBackground="false" mouseChildren="false"
				creationComplete="init(event)"
				dataChange="dchange(event)">
	<fx:Script source="../func/global.as"/>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			private var _sectionField:String = "section";
			protected function init(event:FlexEvent):void
			{
				if ((data.business_picture == "None")||(data.business_picture == "")||
					(data.business_picture == null)||(data.business_picture == "null")){
					bmpImg.source = "assets/"+getDPIHeight().toString()+"/res_place_square.png";
				}
				else {
					bmpImg.visible = true;
				}
				bmpImg.maxHeight = this.height-(50*data.divtype);
				
				if (data.yearly == 'y'){
					dayval.text = data.startdate + " - " + data.enddate;
				}
				else {
					dayval.text = data.weekday;
				}
			}
			public function dchange(event:FlexEvent):void
			{
				if ((data.business_picture == "None")||(data.business_picture == "")||
					(data.business_picture == null)||(data.business_picture == "null")){
					bmpImg.source = "assets/"+getDPIHeight().toString()+"/res_place_square.png";
				}
				else {
					bmpImg.visible = true;
				}
				bmpImg.maxHeight = this.height-(50*data.divtype);
				
				if (data.yearly == 'y'){
					dayval.text = data.startdate + " - " + data.enddate;
				}
				else {
					dayval.text = data.weekday;
				}
			}
		]]>
	</fx:Script>
	<s:VGroup width="100%" height="100%" gap="0">
		<s:Group width="100%" visible="{data.divtype == 1}" 
				height="{(50/(320/Capabilities.screenDPI))*data.divtype}">
			<s:Rect width="100%"  height="100%">
				<s:fill>
					<s:SolidColor alpha="1" color="#8eddce"/>
				</s:fill>
			</s:Rect>
			<s:Label width="100%" verticalCenter="0" left="{20/(320/Capabilities.screenDPI)}" color="#FFFFFF" 
					 fontWeight="bold" styleName="textsize0" text="{data.categoryname}"
					 verticalAlign="middle"></s:Label>
			<s:Line left="0" right="0"  bottom="0" > 
				<s:stroke><s:SolidColorStroke color="0xb2b2b2" weight="1"/></s:stroke>
			</s:Line>
		</s:Group>
		<s:Group width="{this.width}"  mouseEnabled="false" 
				 maxHeight="{130/(320/Capabilities.screenDPI)}"   id="megacont"  >
			<s:HGroup width="{this.width-(this.height*1.3)-5}" gap="0" 
					  paddingTop="{20/(320/Capabilities.screenDPI)}"
					  paddingBottom="{20/(320/Capabilities.screenDPI)}" 
					  paddingLeft="{10/(320/Capabilities.screenDPI)}" 
					  verticalAlign="middle" height="90%" verticalCenter="0">
				<s:VGroup    paddingLeft="{10/(320/Capabilities.screenDPI)}" width="100%"
							 paddingTop="{10/(320/Capabilities.screenDPI)}" 
							 paddingBottom="{10/(320/Capabilities.screenDPI)}" 
							 paddingRight="{10/(320/Capabilities.screenDPI)}">
					<s:Label width="100%" color="#4d4d4d" maxDisplayedLines="1"
							 fontWeight="bold" styleName="textsize1" 
							 text="{data.description}"
							 verticalAlign="middle"></s:Label>
					<s:Label id="dayval"   width="100%"  color="#4d4d4d" fontWeight="bold" 
							 styleName="textsize0" 
							 maxDisplayedLines="1"
							 verticalAlign="middle"></s:Label>
					<s:Label  width="100%" color="#43c7ae"  fontWeight="bold" maxDisplayedLines="1"
							  styleName="textsize0" text=" {data.categoryname}"
							  verticalAlign="middle"></s:Label>
				</s:VGroup>
			</s:HGroup>
			<s:Image id="bmpImg" right="0" width="{(this.height-(50/(320/Capabilities.screenDPI)*data.divtype))*1.3}" 
					 height="100%" source="{data.business_picture}"  maxHeight="{this.height-(50*data.divtype)}"
					 contentLoader="{s_imageCache}"  scaleMode="letterbox" />
		</s:Group>
	</s:VGroup>
	<s:Line left="{20/(320/Capabilities.screenDPI)}" right="0"  bottom="0" > 
		<s:stroke><s:SolidColorStroke color="0xb2b2b2" weight="1"/></s:stroke>
	</s:Line>
</s:ItemRenderer>