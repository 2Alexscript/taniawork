<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark">
	<s:Group width="100%"  height="100%"  >
		<s:Rect width="100%" height="100%">
			<s:fill><s:SolidColor alpha="{data.alphao}" color="#025074"/></s:fill>
		</s:Rect>
		<s:Label text="{data.spend}" color="#FFFFFF"  
				 top="35" bottom="35" styleName="textsize2"
				 verticalAlign="middle" verticalCenter="0"
				 width="{this.width*0.1}" left="30" />
		<s:Label text="{data.name}" color="#FFFFFF" 
				 top="35" bottom="35" styleName="textsize2"
				 verticalAlign="middle" verticalCenter="0"
				 width="{this.width*0.8}" maxWidth="{this.width*0.8}"  
				 left="100"  maxDisplayedLines="1"/>			
	</s:Group>
</s:ItemRenderer>