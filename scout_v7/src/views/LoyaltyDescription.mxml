		<s:Rect width="100%" height="100%">
			<s:fill><s:SolidColor alpha="0.5" color="#000000"/></s:fill>
		</s:Rect>
		<s:VGroup width="100%" height="100%" gap="25" horizontalAlign="center" verticalAlign="middle">
			<s:Label text="Hand to Staff Member"  mouseEnabled="false"
					  width="100%" verticalAlign="middle" textAlign="center"
					 styleName="textsize10" color="#FFFFFF"/>
			<s:Group width="95%" height="590" horizontalCenter="0" verticalCenter="0" visible="true">
				<s:Rect width="100%" height="100%" radiusX="20" radiusY="20">
					<s:fill><s:SolidColor alpha="1" color="#f0f0f0"/></s:fill>
					<s:stroke><s:SolidColorStroke color="#389ec9" weight="4"/></s:stroke>
				</s:Rect>
				<s:VGroup width="100%" height="100%" top="0" gap="0" horizontalAlign="center" verticalAlign="middle"
						   paddingTop="4" paddingBottom="6" paddingRight="2"  paddingLeft="2">
					
					
					
					<s:Group  width="100%" height="20%" horizontalCenter="0">
						<s:Line  right="5" left="0"  bottom="0"  > 
							<s:stroke><s:SolidColorStroke color="0xdadada" weight="1"/></s:stroke>
						</s:Line>
					</s:Group>
					
					
					
					<s:Group  width="100%" height="20%" horizontalCenter="0">
						<s:Line  right="5" left="0"  bottom="0"  > 
							<s:stroke><s:SolidColorStroke color="0xdadada" weight="1"/></s:stroke>
						</s:Line>
						<s:HGroup width="100%" top="0"  bottom="0" height="100%" gap="0">
							<components:keypad  numberlabel="1" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad  numberlabel="2" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad showrightline="false"   numberlabel="3" width="34%" top="0"  bottom="0"  height="100%"/>
						</s:HGroup>
					</s:Group>
					
					<s:Group  width="100%" height="20%" horizontalCenter="0">
						<s:Line  right="5" left="0"  bottom="0"  > 
							<s:stroke><s:SolidColorStroke color="0xdadada" weight="1"/></s:stroke>
						</s:Line>
						<s:HGroup width="100%" top="0"  bottom="0" height="100%" gap="0">
							<components:keypad  numberlabel="4" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad  numberlabel="5" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad showrightline="false"   numberlabel="6" width="34%" top="0"  bottom="0"  height="100%"/>
						</s:HGroup>
					</s:Group>
					
					
					<s:Group  width="100%" height="20%" horizontalCenter="0">
						<s:Line  right="5" left="0"  bottom="0"  > 
							<s:stroke><s:SolidColorStroke color="0xdadada" weight="1"/></s:stroke>
						</s:Line>
						<s:HGroup width="100%" top="0"  bottom="0" height="100%" gap="0">
							<components:keypad  numberlabel="7" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad  numberlabel="8" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad showrightline="false"   numberlabel="9" width="34%" top="0"  bottom="0"  height="100%"/>
						</s:HGroup>
					</s:Group>
					
					
					<s:Group  width="100%" height="20%" horizontalCenter="0">
						<s:HGroup width="100%" top="0"  bottom="0" height="100%" gap="0">
							<components:keypad blx="15" bly="15"  numberlabel="C" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad  numberlabel="0" width="33%" top="0"  bottom="0"  height="100%"/>
							<components:keypad showrightline="false" brx="15" bry="15" numberlabel="del" width="34%" top="0"  bottom="0"  height="100%"/>
						</s:HGroup>
					</s:Group>
					
					
					
				
				</s:VGroup>
			</s:Group>
			<s:Group  mouseOver="gOver(event);" click="closeStaffPinPopup();"
					  mouseOut="gOut(event);" 
					  mouseUp="gOut(event);" 
					  mouseDown="gDown(event);">
				<s:BitmapImage contentLoader="{s_imageCache}" >
					<s:source>
						<s:MultiDPIBitmapSource source160dpi="@Embed('assets/160/x.png')"
												source240dpi="@Embed('assets/240/x.png')"
												source320dpi="@Embed('assets/320/x.png')"
												source480dpi="@Embed('assets/480/x.png')"
												source640dpi="@Embed('assets/640/x.png')"/>
					</s:source>
				</s:BitmapImage>
			</s:Group>
		</s:VGroup>
	</s:Group>
	
	
	
	
	
	
</s:View>