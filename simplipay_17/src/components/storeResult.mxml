<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark">
	
	
	<fx:Script>
		<![CDATA[
			import spark.filters.GlowFilter;
			
			public function profDown(ev:MouseEvent):void {
				var gl:spark.filters.GlowFilter = new GlowFilter(000000,1,5,5,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function profUp(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
				var s:String = "";
				
			}
			
			public function favBtnPress(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				//var stop:String = "";
				data.favpressed = true;
				
				if (data.isfav != 0){
					data.isfav = 0;
				}
				else {
					data.isfav = 1;
				}
				
			}
			
		]]>
	</fx:Script>
	<s:VGroup gap="0"  id="somegroup2" width="100%" >
		<s:BorderContainer   id="somegroup" height="100%" width="100%"   backgroundColor="#FFFFFF" backgroundAlpha="1"
							 mouseOver="profDown(event)" mouseOut="profUp(event)" mouseDown="profDown(event)" borderAlpha="0">
			<s:HGroup id="hgroupe" visible="{data.text == null}" width="100%" height="100%"
					  verticalAlign="middle">
				<s:Image source="http://simplipay.ca/php/storeimages/{data.imagesmall}" height="{hgroupe.height}"  width="40" />
				<s:VGroup top="3" height="100%" width="100%">
					<s:Label color="#000000" fontSize="15" fontWeight="bold" text="{data.name}"></s:Label>
					<s:BorderContainer width="100%" backgroundAlpha="0" borderAlpha="0" >
						<s:Label color="#4A4A4A" fontSize="12" width="80%" fontStyle="italic" left="0" text="{data.tagline}"></s:Label>						
					</s:BorderContainer>
					<s:Label color="#4A4A4A" fontSize="12" fontStyle="italic" text="{data.distance} km"></s:Label>
				</s:VGroup>
				<s:BorderContainer backgroundAlpha="0" borderAlpha="0" height="100%" width="30" right="5" >
					<s:Image id="favBTN" click="favBtnPress(event)" width="30" height="30" 
							 horizontalCenter="0" mouseDown="profDown(event)"
							 mouseOver="profDown(event)" mouseUp="profUp(event)"
							 source="assets/star{data.isfav.toString()}.png" verticalCenter="0"/>
				</s:BorderContainer>
				
				<!--s:Label right="5" height="100%" color="#4A4A4A" fontSize="20" fontStyle="italic"
						 fontWeight="bold" text="&gt;" verticalAlign="middle"></s:Label-->
			</s:HGroup>
			<s:BorderContainer id="hgroupe2" borderAlpha="0" visible="{data.text != null}" width="100%" height="100%" >
				<s:Label color="#878787" fontSize="18" fontWeight="bold" horizontalCenter="0"
						 text="{data.text}" verticalCenter="0"></s:Label>
			</s:BorderContainer>
		</s:BorderContainer>
		
		<s:BorderContainer height="1" width="100%" borderAlpha="0.5" borderColor="#00000" />
	</s:VGroup>
	
	

</s:ItemRenderer>