<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"   
			autoDrawBackground="false" contentBackgroundAlpha="0"
			xmlns:s="library://ns.adobe.com/flex/spark">
<s:states>
	<s:State name="normal"/>
	<s:State name="hovered"/>
	<s:State name="selected"/>
</s:states>   
<s:Group  left="{30/(320/Capabilities.screenDPI)}" right="0" height="{120/(320/Capabilities.screenDPI)}"  >
	<s:Label fontFamily="HelveticaNeuecff" styleName="textsize1" 
			 fontWeight="bold"
			 text="{data.name}" 
			 left="0"  verticalCenter="3"
			 color="#4d4d4d"/>
	<s:Line  left="0" right="0"  bottom="0" > 
		<s:stroke><s:SolidColorStroke color="0xcccccc" weight="{1/(320/Capabilities.screenDPI)}"/></s:stroke>
	</s:Line>
</s:Group>		
</s:ItemRenderer>