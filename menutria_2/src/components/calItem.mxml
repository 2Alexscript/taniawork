<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"   
				autoDrawBackground="false"  width="100%" stateChangeComplete="afterstate(event)"
				xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function afterstate(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				if ((data.name == 's')||
					(data.name == 'm')||
					(data.name == 't')||
					(data.name == 'w')||
					(data.name == '')||
					(data.name == 'f')){
					this.currentState = "normal";
				}
			}
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>   
	<s:Rect width="100%" height="100%" >
		<s:fill>
			<s:SolidColor color.selected="#dddddd"
						  color.hovered="#dddddd"
						  color.normal="#ffffff"/>
		</s:fill>
	</s:Rect>
	<s:Group width="100%"  height="100%"
			 mouseEnabledWhereTransparent="true"
			 mouseEnabled="true">
		<s:Rect  width="100%" height="100%" >
			<s:fill>
				<s:SolidColor color.selected="#dddddd"
							  color.hovered="#dddddd"
							  color.normal="#ffffff"/>
			</s:fill>
		</s:Rect>
		<s:Label color.selected="#222222" 
				 color.hovered="#222222"
				 color.normal="#222222"
				 styleName="textsize5" 
				 verticalCenter="0" horizontalCenter="0" 
				 left="{30/(320/Capabilities.screenDPI)}" 
				 text="{data.name}" mouseEnabled="false"/>
		<s:Image bottom="0" horizontalCenter="0" mouseEnabled="false"
				 visible.selected="true" visible="false">
			<s:source>
				<s:MultiDPIBitmapSource source160dpi="@Embed('assets/160/tritab.png')"
										source240dpi="@Embed('assets/240/tritab.png')"
										source320dpi="@Embed('assets/240/tritab.png')"
										source480dpi="@Embed('assets/240/tritab.png')"
										source640dpi="@Embed('assets/240/tritab.png')"/>
			</s:source>
		</s:Image>
	</s:Group>	
</s:ItemRenderer>