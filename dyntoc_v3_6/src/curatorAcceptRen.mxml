<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx">

	<fx:Script>
		<![CDATA[
			import spark.events.TextOperationEvent;
			import spark.filters.GlowFilter;
		
			public function glowOver(ev:MouseEvent):void {
				var g:GlowFilter = new GlowFilter(16711680,1,5,5,1);
				ev.currentTarget.filters = [g];
			}
			public function glowOut(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
			}

			


			protected function textarea1_changeHandler(event:TextOperationEvent):void
			{
				data.newname = texto.text;
			}

		]]>
	</fx:Script>

	
	
	<s:HGroup left="0" right="0" buttonMode="true" 
			  useHandCursor="true"
			  top="0" height="25" width="150"
			   name="{data.name}+box" 
			  bottom="0" verticalAlign="middle">
		<!--s:Image source="assets/delete.png" width="20"
				 height="15" buttonMode="true" useHandCursor="true"
				 top="0" left="0" mouseOver="glowOver(event);"
				 mouseOut="glowOut(event);" click="image1_clickHandler(event)" /-->
		<s:TextArea left="2" top="4" width="130" id = "texto"
					height="20" color="#FFFFFF" change="textarea1_changeHandler(event)"
					focusColor="#62A0D4" fontFamily="Myriad Pro"
					text="{data.newname}"/>
		<s:Label  text="{data.num}" fontFamily="Myriad Pro"
				  color="#FFFFFF" top="4" right="5"/>
		
	</s:HGroup>
</s:ItemRenderer>