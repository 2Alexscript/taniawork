<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"   
				autoDrawBackground="false"
				xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Script source="../func/globalFunctions.as"/>
	<fx:Script>
		<![CDATA[		
			import mx.events.FlexEvent;
			protected function infoclick(event:MouseEvent):void
			{
				data.infostatus = true;	
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>   
	<s:Group  width="100%" height="{110/(320/Capabilities.screenDPI)}"  >
		<s:Group left="{30/(320/Capabilities.screenDPI)}"   verticalCenter="0">
			<s:Image id="checkimage" visible="{data.chosen == 'yes'}">
				<s:source>
					<s:MultiDPIBitmapSource source160dpi="@Embed('assets/160/checkblue.png')"
											source240dpi="@Embed('assets/240/checkblue.png')"
											source320dpi="@Embed('assets/320/checkblue.png')"
											source480dpi="@Embed('assets/320/checkblue.png')"
											source640dpi="@Embed('assets/320/checkblue.png')"/>
				</s:source>
			</s:Image>
		</s:Group>
		<s:Label id="hl1" fontFamily="HelveticaNeuecff" styleName="textsize2" fontWeight="bold"
				 text="{data.name}" visible="{data.chosen == 'yes'}"
				 left="{85/(320/Capabilities.screenDPI)}"  verticalCenter="3"
				 color="#43c7ae"/>
		<s:Label id="hl2" fontFamily="HelveticaNeuecff" styleName="textsize2" fontWeight="bold"
				 text="{data.name}" visible="{data.chosen == 'no'}"
				 left="{85/(320/Capabilities.screenDPI)}"  verticalCenter="3"
				 color="#4d4d4d"
				/>
		<s:Group right="0" width="{110/(320/Capabilities.screenDPI)}" height="{110/(320/Capabilities.screenDPI)}" click="infoclick(event)" 
				 mouseEnabledWhereTransparent="true" visible="{data.user_description != null}"    verticalCenter="0">
			<s:Image id="infoimage"  horizontalCenter="0" verticalCenter="0" mouseEnabled="false" >
				<s:source>
					<s:MultiDPIBitmapSource source160dpi="@Embed('assets/160/info.png')"
											source240dpi="@Embed('assets/240/info.png')"
											source320dpi="@Embed('assets/320/info.png')"
											source480dpi="@Embed('assets/320/info.png')"
											source640dpi="@Embed('assets/320/info.png')"/>
				</s:source>
			</s:Image>
		</s:Group>
		
		
		<s:Line  left="{20/(320/Capabilities.screenDPI)}" right="0"  bottom="0" > 
			<s:stroke>
				<s:SolidColorStroke color="0xcccccc" weight="1"/>
			</s:stroke>
		</s:Line>	
</s:Group>		
</s:ItemRenderer>