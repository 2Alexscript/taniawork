	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
		<s:State name="up"/>
	</s:states>
	<s:Group width="100%" height="50">
		<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="left">
			<s:Label color="#000000"  fontSize="15" text="{data.name}"></s:Label>
			<s:Group width="100%" height="100%" >
				<s:Group visible="{data.type == '0'}" width="100%" height="100%" >
					<s:TextInput id="textchoice"
					width.normal="100%" textAlign.normal="left" verticalCenter.normal="0"/>
				</s:Group>	
				<s:Group visible="{data.type == '1'}" width="100%" height="100%" >
					<s:DateSpinner id="datechoice" height="20" height.normal="50"/>
				</s:Group>	
				<s:Group visible="{data.type == '2'}" width="100%" height="100%" >
					<s:SpinnerListContainer width="100%" height="50"
											x.hovered="-1" y.hovered="-76"
											left.normal="0" verticalCenter.normal="0"
											x.selected="-1" y.selected="-76"
											x.up="-1" y.up="-76">
						<s:SpinnerList height="100%" id="tempspinner" labelField="temp"  width="100%" 
