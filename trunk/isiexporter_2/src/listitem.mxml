<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" creationComplete="init(event)">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			
			import spark.events.IndexChangeEvent;
			[Bindable]
			public var isioptions:ArrayCollection = new ArrayCollection();
			protected function init(event:FlexEvent):void
			{
			
				
				isioptions.addItem({name:"AU"});
				isioptions.addItem({name:"TI"});
				isioptions.addItem({name:"SO"});
				isioptions.addItem({name:"AB"});
				isioptions.addItem({name:"CR"});
				isioptions.addItem({name:"PY"});
				
				
			}
			
			protected function changelist(event:IndexChangeEvent):void
			{
				// TODO Auto-generated method stub
				data.sindex = isilist.selectedIndex;
			}
			
		]]>
	</fx:Script>
	<mx:HBox width="100%" height="26" verticalAlign="middle" >
		<s:Label y="32" height="26" fontSize="14" text="{data.name}" textAlign="center"
				 verticalAlign="middle"/>
		<s:DropDownList id="isilist" y="33" height="24" change="changelist(event)"
						dataProvider="{isioptions}" labelField="name" selectedIndex="{data.sindex}"/>
	</mx:HBox>
	
	
</s:ItemRenderer>
