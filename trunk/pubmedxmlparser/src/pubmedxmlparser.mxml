				fileStream.addEventListener(Event.CLOSE,streamClosed);
				fileStream.addEventListener(ProgressEvent.PROGRESS,progressBytesIn);
				fileStream.addEventListener(IOErrorEvent.IO_ERROR,ioError);
				
				fileStream.readAhead=40960;
				fileStream.openAsync(file,FileMode.READ);
				
				trace("File Total Size: " + file.size.toString()+"\n");     
			}
			
