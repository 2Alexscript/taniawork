			private function readSync():void
			{
				fileStream.open(file, FileMode.READ);
				
				while(bytesLeft > 0)
				{
					if (bytesLeft > READ_CHUNK_SIZE){
						toRead = READ_CHUNK_SIZE;
					} else {
						toRead = bytesLeft;
					}
					
					if(toRead > fileStream.bytesAvailable) 
						toRead = fileStream.bytesAvailable;
					
					try{
						fileStream.readBytes(curBytes, 0, toRead);          
					} catch(err:EOFError) {
						fileStream.close();  
						  
						Alert.show("EOFError: "+ObjectUtil.toString( err));
						return;
					} catch(err:IOError) {
						fileStream.close();     
						Alert.show("IOError: "+ObjectUtil.toString( err));
						return;                              
					}     
					
					bytesLeft = bytesLeft - toRead;
					totalBytesRead = totalBytesRead + toRead;
					
					var msg:String = "totalBytesRead:"+totalBytesRead+"\n";
					msg=msg + "bytesLeft:"+bytesLeft+"\n";
					msg=msg + "bytesAvailable:"+fileStream.bytesAvailable+"\n";
					trace(msg);                         
				}
				
			}
			
