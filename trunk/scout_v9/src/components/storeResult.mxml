<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				autoDrawBackground="true" 
				creationComplete="init(event)"
				dataChange="datachango(event)"
				xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import spark.core.ContentCache;
			static public const s_imageCache:ContentCache = new ContentCache();
			[Bindable]
			public var neededwidth:Number = 330;
			protected function init(event:FlexEvent):void
			{
				neededwidth = this.parent.width/2-1;
				fixdistance();
			}
			
			protected function datachango(event:FlexEvent):void
			{
				fixdistance();
			}
			public function fixdistance():void {
				if ((data.distance != '')&&(data.distance != 'null')&&(data.distance != null)){
					var dist:Number = data.distance;
					if (dist >= 1){
						distotexto.text = dist.toFixed(1)+ " km";
					}
					else {
						dist = dist * 1000;
						distotexto.text = dist.toFixed(0)+ " m";
					}
					distotexto.visible = true;
				}
			}
			
		]]>
	</fx:Script>
	<s:BorderContainer borderAlpha="1" borderWeight="1" borderColor="#000000" backgroundAlpha="0" width="{neededwidth}"  height="{neededwidth}"  >
		
		<s:Image  id="bmpImg"  width="{neededwidth}" 
				  height="{neededwidth}"  contentLoader="{s_imageCache}"   scaleMode="zoom"
				  source="{data.business_picture}" />
			<s:Image  width="{neededwidth}"  bottom="0"
						   height="{neededwidth}" 
						   contentLoader="{s_imageCache}" 
						   scaleMode="stretch"  	   >
				<s:source>
					<s:MultiDPIBitmapSource source160dpi="@Embed('../assets/320/gradient.png')"
											source240dpi="@Embed('../assets/320/gradient.png')"
											source320dpi="@Embed('../assets/320/gradient.png')"
											source480dpi="@Embed('../assets/320/gradient.png')"
											source640dpi="@Embed('../assets/320/gradient.png')"/>
				</s:source>
			</s:Image>
		<s:Label width="{(neededwidth/3)*2}" paddingLeft="2" color="#FFFFFF"  bottom="0" left="0"
			 styleName="textsize1" text="{data.business_name}"
				 verticalAlign="middle"></s:Label>
		<s:Label color="#FFFFFF"  styleName="textsize1" paddingRight="2" bottom="0" right="0"
				 visible="false" id="distotexto"
				 ></s:Label>
	</s:BorderContainer>
</s:ItemRenderer>