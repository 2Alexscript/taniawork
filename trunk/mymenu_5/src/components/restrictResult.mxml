			<s:Image smooth="true" visible="{data.chosen == 'no'}" source="assets/windowsui/add.png" />	
			<s:Image smooth="true"  visible="{data.chosen == 'yes'}" source="assets/windowsui/remove.png" />	
		</s:Group>
		
		
	</s:HGroup>		
