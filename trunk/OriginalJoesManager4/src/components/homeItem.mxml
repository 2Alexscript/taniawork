<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:s="library://ns.adobe.com/flex/spark"   xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  width="100%" height="100%" horizontalAlign="center" verticalAlign="middle"  >
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var imagetype:String = "";
			[Bindable]
			public var lbl:String = "";
	]]>
	</fx:Script>
	<s:BorderContainer borderAlpha="0.5" borderColor="#000000" dropShadowVisible="true"
	backgroundColor="#FFFFFF" backgroundAlpha="0.5" cornerRadius="7"
	width="100%" height="100%" maxHeight="120" maxWidth="140">
		<s:Image width="65" height="65" visible="{imagetype != ''}" horizontalCenter="0" smooth="true" source="{imagetype}"
				 verticalCenter="-11"/>
		<s:Label id="hll" color="#000000" fontFamily="ubuntuCFF" fontSize="15" fontWeight="bold"
				 horizontalCenter="0" text="{lbl}" verticalCenter="40"/>	
	</s:BorderContainer>
</s:VGroup>