<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				stateChangeComplete="stateChangedHandler()">
	<fx:Script>
		<![CDATA[
			import spark.filters.GlowFilter;
			[Bindable]
			public var bcolor:String = "#FFFFFF";
			public function profDown(ev:MouseEvent):void {
				var gl:spark.filters.GlowFilter = new GlowFilter(000000,1,5,5,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function profUp(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
				var s:String = "";
				
			}
			protected function stateChangedHandler():void
			{
				
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
		<s:State name="up"/>
	</s:states>
	<s:Group width="100%" height="40">
		<s:HGroup height="100%" gap="0" width="100%" verticalAlign="middle">
			<s:BorderContainer y="0" width="100" height="40" backgroundAlpha="1"
							   backgroundColor="#22272e">
				<s:Label width="100%" color="#FFFFFF" fontSize="15" horizontalCenter="0"
						 text="{data.name}" verticalCenter="0" height="100%"
						 textAlign.normal="center" verticalAlign.normal="middle"></s:Label>
			</s:BorderContainer>
			<s:BorderContainer y="0" width="100" height="40" backgroundAlpha="1"
							   backgroundColor="#22272e">
				<s:Label width="100%" color="#FFFFFF" fontSize="15" horizontalCenter="0"
						 text="{data.sales}" verticalCenter="0" height="100%"
						 textAlign.normal="center" verticalAlign.normal="middle"></s:Label>
			</s:BorderContainer>
			<s:BorderContainer y="0" width="100" height="40" backgroundAlpha="1"
							   backgroundColor="#22272e">
				<s:Label width="100%" color="#FFFFFF" fontSize="15" horizontalCenter="0"
						 text="{data.discount}" verticalCenter="0" height="100%"
						 textAlign.normal="center" verticalAlign.normal="middle"></s:Label>
			</s:BorderContainer>
			<s:BorderContainer y="0" width="100" height="40" backgroundAlpha="1"
							   backgroundColor="#22272e">
				<s:Label width="100%" color="#FFFFFF" fontSize="15" horizontalCenter="0"
						 text="{data.refunds}" verticalCenter="0" height="100%"
						 textAlign.normal="center" verticalAlign.normal="middle"></s:Label>
			</s:BorderContainer>
			<s:BorderContainer y="0" width="100" height="40" backgroundAlpha="1"
							   backgroundColor="#22272e">
				<s:Label width="100%" color="#FFFFFF" fontSize="15" horizontalCenter="0"
						 text="{data.tax}" verticalCenter="0" height="100%"
						 textAlign.normal="center" verticalAlign.normal="middle"></s:Label>
			</s:BorderContainer>
			<s:BorderContainer y="0" width="100" height="40" backgroundAlpha="1"
							   backgroundColor="#22272e">
				<s:Label width="100%" color="#FFFFFF" fontSize="15" horizontalCenter="0"
						 text="{data.tips}" verticalCenter="0" height="100%"
						 textAlign.normal="center" verticalAlign.normal="middle"></s:Label>
			</s:BorderContainer>
			<s:BorderContainer y="0" width="100" height="40" backgroundAlpha="1"
							   backgroundColor="#22272e">
				<s:Label width="100%" color="#FFFFFF" fontSize="15" horizontalCenter="0"
						 text="{data.subtotal}" verticalCenter="0" height="100%"
						 textAlign.normal="center" verticalAlign.normal="middle"></s:Label>
			</s:BorderContainer>
			
			
		</s:HGroup>
	</s:Group>
</s:ItemRenderer>