<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 	
				xmlns:s="library://ns.adobe.com/flex/spark"
				autoDrawBackground="false" mouseChildren="false"
				dataChange="dchange(event)"
				creationComplete="init(event)"
				mouseOver="gOver(event);" mouseDown="gDown(event);"
				mouseOut="gOut(event);" mouseUp="gOut(event);">
	<fx:Script source="../func/globalFunctions.as"/>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import spark.core.ContentCache;
			protected function init(event:FlexEvent):void
			{
				var ratingstring:String = "";
				var ratingnumber:Number = 0;
				
				bmpImg.maxHeight = this.height-((50/(320/Capabilities.screenDPI))*data.divtype);
				
				if ((data.picture == "None")||(data.picture == "")||(data.picture == null)||(data.picture == "null")){
					bmpImg.source = "assets/"+getDPIHeight().toString()+"/dish_place_square.png";
				}
				else {
					bmpImg.visible = true;
				}
				ratingstring = data.rating.toString();
				ratingnumber = Number(data.rating);
				
				if (ratingnumber == 0){
					ratinglabel.text = "-";
				}
				
				if (ratingnumber >= 10){
					ratingnumber = 10;
					ratinglabel.text = "10";
				}
			}
			
			public function dchange(event:FlexEvent):void
			{
				try{
					
					bmpImg.maxHeight = this.height-((50/(320/Capabilities.screenDPI))*data.divtype);
					
					if ((data.picture == "None")||(data.picture == "")||(data.picture == null)||(data.picture == "null")){
						bmpImg.source = "assets/"+getDPIHeight().toString()+"/dish_place_square.png";
					}
					else {
						bmpImg.visible = true;
					}
					var ratingstring:String = "";
					var ratingnumber:Number = 0;
					
					ratingstring = data.rating.toString();
					ratingnumber = Number(data.rating);
					
					if (ratingnumber == 0){
						ratinglabel.text = "-";
					}
					
					if (ratingnumber >= 10){
						ratingnumber = 10;
						ratinglabel.text = "10";
					}
				}
				catch(e:Error){	}
			}
		]]>
	</fx:Script>
<s:VGroup width="100%" height="100%" gap="0">
	<s:Group width="100%" visible="{data.divtype == 1}" 
					   height="{(50/(320/Capabilities.screenDPI))*data.divtype}">
		<s:Rect width="100%"  height="100%">
			<s:fill>
				<s:SolidColor alpha="1" color="#8eddce"/>
			</s:fill>
		</s:Rect>
		<s:Label width="100%" verticalCenter="0" left="{20/(320/Capabilities.screenDPI)}" color="#FFFFFF" 
				 fontWeight="bold" styleName="textsize0" text="{data.categoryname}"
				 verticalAlign="middle"></s:Label>
		<s:Line left="0" right="0"  bottom="0" > 
			<s:stroke><s:SolidColorStroke color="0xb2b2b2" weight="1"/></s:stroke>
		</s:Line>
	</s:Group>
	<s:Group width="{this.width}" height="{160/(320/Capabilities.screenDPI)}"  mouseEnabled="false"   id="megacont"  >
		<s:HGroup width="{this.width-(this.height*1.3)-5}" gap="0" paddingTop="{15/(320/Capabilities.screenDPI)}"
				  paddingBottom="15" paddingLeft="{10/(320/Capabilities.screenDPI)}" verticalAlign="middle" height="90%" verticalCenter="0">
			<s:VGroup width="20%" horizontalAlign="center">
				<s:Group  height="{65/(320/Capabilities.screenDPI)}" 
						  width="{65/(320/Capabilities.screenDPI)}" 
						  horizontalCenter="0" verticalCenter="0">
					<s:Rect radiusX="{15/(320/Capabilities.screenDPI)}"
							radiusY="{15/(320/Capabilities.screenDPI)}" 
							width="100%"  height="100%">
						<s:fill>
							<s:SolidColor alpha="1" color="#b3b3b3"/>
						</s:fill>
					</s:Rect>
					<s:Label id="ratinglabel" color="#FFFFFF" horizontalCenter="0" styleName="textsize9"
							 fontWeight="bold" verticalCenter="3"/>
				</s:Group>	
				<s:BitmapImage visible="{data.goodforme == 'no'}"
						 contentLoader="{s_imageCache}">
					<s:source>
						<s:MultiDPIBitmapSource source160dpi="@Embed('assets/160/alert.png')"
												source240dpi="@Embed('assets/320/alert.png')"
												source320dpi="@Embed('assets/320/alert.png')"
												source480dpi="@Embed('assets/320/alert.png')"
												source640dpi="@Embed('assets/320/alert.png')"/>
					</s:source>
				</s:BitmapImage>
			</s:VGroup>
			<s:VGroup    paddingLeft="{10/(320/Capabilities.screenDPI)}" width="100%" paddingTop="{10/(320/Capabilities.screenDPI)}" paddingBottom="{10/(320/Capabilities.screenDPI)}" paddingRight="{10/(320/Capabilities.screenDPI)}">
				<s:Label width="100%" color="#4d4d4d" maxDisplayedLines="1" 
						 fontWeight="bold" styleName="textsize1" text="{data.name}"
						 verticalAlign="middle"></s:Label>
				<s:HGroup width="100%" gap="0">
					<s:Label  color="#4d4d4d" fontWeight="bold"
							  styleName="textsize0" text="{data.categoryname}"
							  verticalAlign="middle"></s:Label>
					<s:Label color="#43c7ae"  fontWeight="bold"
							 styleName="textsize0" text=" ${data.cost}"
							 verticalAlign="middle"></s:Label>
				</s:HGroup>
				<s:Label color="#808080"  styleName="textsize0" 
						 text="{data.distance} km"/>
			</s:VGroup>
		</s:HGroup>
	
		<s:Image id="bmpImg" right="0"  width="{(this.height-((50/(320/Capabilities.screenDPI))*data.divtype))*1.3}" 	
				 height="100%" source="{data.picture}"  maxHeight="{this.height-(50*data.divtype)}"
				 contentLoader="{s_imageCache}"  scaleMode="zoom" />
	</s:Group>
</s:VGroup>
	<s:Line left="{20/(320/Capabilities.screenDPI)}" right="0"  bottom="0" > 
		<s:stroke><s:SolidColorStroke color="0xb2b2b2" weight="1"/></s:stroke>
	</s:Line>
</s:ItemRenderer>