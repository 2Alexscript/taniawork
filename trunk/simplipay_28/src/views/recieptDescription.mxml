<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:model="model.*"  
		viewActivate="view1_activateHandler(event)"
		menuKeyPressed="navigator.popView();" 
		backKeyPressed="navigator.popView();" backgroundColor="#2a3038"
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="Reciept Detail">
	<s:navigationContent>
		<s:Image x="0" y="-2" click="navigator.popView();" 
				 mouseDown="gDown(event)"
				 mouseOut="gOut(event)" 
				 mouseOver="gOver(event)"
				 mouseUp="gOut(event)">
			<s:source>
				<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/backbtnLow.png')"
										source240dpi="@Embed('assets/interfaceimages/multi/backbtnMed.png')"
										source320dpi="@Embed('assets/interfaceimages/multi/backbtnHigh.png')"/>
			</s:source>
		</s:Image>
	</s:navigationContent>
	<s:actionContent>		
	</s:actionContent>
	<fx:Script>
		<![CDATA[
			import flash.geom.ColorTransform;
			import flash.sensors.Geolocation;
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			import mx.rpc.events.ResultEvent;
			import spark.components.supportClasses.StyleableTextField;
			import spark.events.IndexChangeEvent;
			import spark.events.ListEvent;
			import spark.events.ViewNavigatorEvent;
			[Bindable]
			public var googleTravelUrl:String = "";
			import spark.filters.GlowFilter;
			public function profDown(ev:MouseEvent):void {
				var gl:spark.filters.GlowFilter = new GlowFilter(000000,1,5,5,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function profUp(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
				var s:String = "";	
			}
			public function view1_activateHandler(event:Event):void{
			}
			private function onViewDeactivate():void {
			}
			public function tOver(ev:MouseEvent):void {
				ev.currentTarget.setStyle("textDecoration","underline");
			}
			public function tOut(ev:MouseEvent):void {
				ev.currentTarget.setStyle("textDecoration","none");
			}
			public function gOver(ev:MouseEvent):void {
				var gl:GlowFilter = new GlowFilter(000000,0.4,20,20,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function gDown(ev:MouseEvent):void {
				var gl:GlowFilter = new GlowFilter(000000,0.4,20,20,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function gOut(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
			}
		]]>
	</fx:Script>	
	
	<s:Scroller  left="0" right="0" top="0" bottom="0"  verticalScrollPolicy="on" horizontalScrollPolicy="off" >
		<s:VGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center" horizontalCenter="0">
			<s:Group width="95%" horizontalCenter="0"  height="100%" >
				<s:Image y="0" left="0" right="0" top="10" alpha="1">
					<s:source>
						<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/dailydealsreceiptbgLow.png')"
												source240dpi="@Embed('assets/interfaceimages/multi/dailydealsreceiptbgMed.png')"
												source320dpi="@Embed('assets/interfaceimages/multi/dailydealsreceiptbgHigh.png')"/>
					</s:source>
				</s:Image>
				<s:VGroup width="100%" height="100%" gap="5" horizontalAlign="center"
						  paddingTop="20">
					<s:Label id="s0" top="48" height="10%" color="#0A4972" fontWeight="bold"
							 horizontalCenter="0" text="RECEIPT" textAlign="center"
							 verticalAlign="middle"/>
					<s:VGroup x="15" height="50%" width="95%" gap="20">
						<s:BorderContainer width="100%" height="32" backgroundAlpha="0" borderAlpha="0">
							<s:HGroup left="0" width="50%" height="100%" verticalAlign="middle"
									  verticalCenter="0">
								<s:Image>
									<s:source>
										<s:MultiDPIBitmapSource source160dpi="@Embed('assets/interfaceimages/multi/calLow.png')"
																source240dpi="@Embed('assets/interfaceimages/multi/calMed.png')"
																source320dpi="@Embed('assets/interfaceimages/multi/calHigh.png')"/>
									</s:source>
								</s:Image>
								<s:Label id="s5" left="5" color="#2A3038" fontWeight="bold"
										 styleName="textsize3"
										 text="{data.day}/{data.month}/{data.year}"
										 verticalAlign="middle" verticalCenter="0"/>
							</s:HGroup>
							<s:HGroup right="0" width="50%" height="100%" verticalAlign="middle"
									  verticalCenter="0" horizontalAlign="right">
								<s:Label id="s6" right="5" color="#2A3038" fontWeight="bold"
										 styleName="textsize3" text="{data.time}" verticalAlign="middle"
										 verticalCenter="0"/>
								<s:Image right="15" source="assets/interfaceimages/original/clock.png" verticalCenter="0"/>
								
							</s:HGroup>
							
							
						</s:BorderContainer>
						<s:VGroup gap="15" width="100%">
							<s:Label id="s1" left="14" color="#2A3038" fontWeight="bold"
									 styleName="textsize3" text="{data.locationname}"/>
							<s:Label id="s8" left="14" color="#2A3038" fontWeight="normal"
									 styleName="textsize3" text="{data.description}"/>
						</s:VGroup>
						<s:BorderContainer height="1" visible="false" width="100%" borderAlpha="1" borderColor="#8a8a8a"/>
						
						<s:BorderContainer width="100%" backgroundAlpha="0" borderAlpha="0">
							<s:Label left="0" color="#2A3038" styleName="textsize3" text="Price:"/>
							<s:Label right="0" color="#2A3038" styleName="textsize3" text="{data.price}"/>
						</s:BorderContainer>
						<s:BorderContainer width="100%" backgroundAlpha="0" borderAlpha="0">
							<s:Label visible="{data.tip != '-1'}" left="0" color="#2A3038"
									 styleName="textsize3" text="Tip:"/>
							<s:Label visible="{data.tip != '-1'}" right="0" color="#2A3038"
									 styleName="textsize3" text="%{data.tip}"/>
						</s:BorderContainer>
						<s:BorderContainer height="1" width="100%" borderAlpha="1" borderColor="#8a8a8a"/>
						<s:BorderContainer width="100%" height="40" borderAlpha="0" backgroundAlpha="0" >
							<s:Label left="0" color="#2A3038" fontWeight="bold" styleName="textsize3"
									 text="Subtotal:" verticalCenter="0"/>
							<s:Label right="0" color="#EF7716" fontWeight="bold" styleName="textsize3"
									 text="${data.total}"/>
						</s:BorderContainer>
						
						
					</s:VGroup>
				</s:VGroup>
				
			</s:Group>
		</s:VGroup>		
	</s:Scroller>
</s:View>