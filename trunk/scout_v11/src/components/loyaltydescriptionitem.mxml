<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark" 
				creationComplete="init(event)" dataChange="onchange(event)" mouseOver="gOver(event);"
				mouseOut="gOut(event);" mouseUp="gOut(event);" mouseDown="gDown(event);" >
	<fx:Script source="../func/global.as"/>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			protected function init(event:FlexEvent):void
			{
				if (data.amount >= data.spend){
					bcolor.color = 0x21b1e6;
					la1.setStyle("color","#FFFFFF");
					la2.setStyle("color","#FFFFFF");
					stroko.color = 0x098aba;
				}
				else {
					bcolor.color = 0xf1f3f4;
					bcolor.alpha = 1;
					la1.setStyle("color","#5e5c5c");
					la2.setStyle("color","#5e5c5c");
					stroko.color = 0x747474;
				}
			}
			protected function onchange(event:FlexEvent):void
			{
				if (data.amount >= data.spend){
					bcolor.color = 0x21b1e6;
					la1.setStyle("color","#FFFFFF");
					la2.setStyle("color","#FFFFFF");
					stroko.color = 0x098aba;
					
				}
				else {
					bcolor.color = 0xf1f3f4;
					bcolor.alpha = 1;
					la1.setStyle("color","#5e5c5c");
					la2.setStyle("color","#5e5c5c");
					stroko.color = 0x747474;
				}
			}
		]]>
	</fx:Script>
	<s:Group width="100%"  height="100%"  >
		<s:Rect width="100%" height="100%">
			<s:fill><s:SolidColor id="bcolor" alpha="1"/></s:fill>
		</s:Rect>
		<s:Label id="la1" text="{data.spend}" 
				 styleName="textsize2"
				 verticalAlign="middle" verticalCenter="0"
				 width="{this.width*0.1}" left="{30/(320/Capabilities.screenDPI)}" />
		<s:Label id="la2" text="{data.name}"
				 top="{35/(320/Capabilities.screenDPI)}"
				 bottom="{35/(320/Capabilities.screenDPI)}" styleName="textsize2"
				 verticalAlign="middle" verticalCenter="0"
				 width="{this.width*0.8}" maxWidth="{this.width*0.8}"  
				 left="{100/(320/Capabilities.screenDPI)}"  maxDisplayedLines="1"/>
		<s:Line id="lineo" visible="true" left="0" right="0"  bottom="0"  width="100%" > 
			<s:stroke><s:SolidColorStroke id="stroko" alpha="1"  weight="{1/(320/Capabilities.screenDPI)}"/></s:stroke>
		</s:Line>
	</s:Group>
</s:ItemRenderer>