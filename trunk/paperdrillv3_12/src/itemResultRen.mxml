<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" >
	<fx:Script>
		<![CDATA[	
		]]>
	</fx:Script>
	<s:Rect width="165" height="102" >
		<s:stroke>
			<s:SolidColorStroke 
				color="0x000000" 
				weight="0.5"/>
		</s:stroke>
		<s:fill>
			<s:SolidColor 
				color="0x000000"
				alpha="0.05"
				/>
		</s:fill>
		
	</s:Rect>
	<s:Label id="bookTitleLabel" left="10" maxDisplayedLines="4" fontFamily="Myriad Pro"
			 top="10" height="{(102/2)+5}" width="145" mouseEnabled="false"
			 fontSize="10" text="{data.bookTitle}"/>
	<s:Label id="bookAuthorLabel" left="10" fontFamily="Myriad Pro" maxDisplayedLines="2"
			 bottom="20" height="{(102/2)-30}" width="145" mouseEnabled="false"
			 color="#696969" fontSize="10" text="{data.bookAuthor}"/>
	
	
	

</s:ItemRenderer>
