			protected function addpoint(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				var ranlat:Number = 53.5+(Math.random()/10);
				var ranlong:Number = -113.5+(Math.random()/10);
				var m:Marker = new Marker(new LatLng(ranlat,ranlong));
				m.title="Random Point";
				m.subtitle="Address: Random Address";
				m.fillColor=MarkerStyles.MARKER_COLOR_GREEN;
				overlayarray.push(m);
				fullscreenmap.addOverlay(overlayarray[overlayarray.length-1]);
			}
			protected function removeallpoints(event:MouseEvent):void
			{
				for (var i:uint = 0; i < overlayarray.length; i++){
					fullscreenmap.removeOverlay(overlayarray[i]);
				}
				overlayarray = new Array();
				
			}
			
			
		]]>
