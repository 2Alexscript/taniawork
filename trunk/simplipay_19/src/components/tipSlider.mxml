<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:s="library://ns.adobe.com/flex/spark" xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   width="300"  height="50" borderAlpha="0" backgroundAlpha="0" cornerRadius="0" creationComplete="init(event)"   >
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import mx.events.MoveEvent;
			import mx.events.StateChangeEvent;
			
			import spark.events.IndexChangeEvent;
			import spark.filters.GlowFilter;
			[Bindable]
			public var tipList:ArrayCollection = new ArrayCollection();
			[Bindable]
			public var currentSelected:String = "0";
			
			protected function init(event:FlexEvent):void
			{	
				tipList.addItem({label:"0%",color:"0x6588A1"});
				tipList.addItem({label:"5%",color:"0x6588A1"});
				tipList.addItem({label:"10%",color:"0x6588A1"});
				tipList.addItem({label:"15%",color:"0x6588A1"});
				tipList.addItem({label:"18%",color:"0x6588A1"});
				tipList.addItem({label:"20%",color:"0x6588A1"});
				tipList.addItem({label:"40%",color:"0x6588A1"});
				tipList.addItem({label:"80%",color:"0x6588A1"});
				tipList.addItem({label:"100%",color:"0x6588A1"});

				//tipScroller.dataProvider = tipList;

				
				
			}
			
		
			public function getCurrentSelected():String {
		   		//if (tipScroller.selectedIndex != -1){
				//	return tipScroller.selectedItem.label;
				//}
				return "%0";
			}
			
			protected function listChange(event:IndexChangeEvent):void
			{
				
				
			}
			public function gOver(ev:MouseEvent):void {
				//var gl:spark.filters.GlowFilter = new GlowFilter(000000,1,4,4,5,1,true);
				//ev.currentTarget.filters = [gl];
			}
			public function gDown(ev:MouseEvent):void {
				var gl:GlowFilter = new GlowFilter(000000,1,4,4,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function gOut(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
			}
			public function tipgo(u:Number):void {
				var tempval:Number = tslide.value;
				tempval = tempval + u;
				
				if (tempval > 100){
					tempval = 100;
				}
				else if (tempval < 0){
					tempval = 0;
				}
				
				tslide.value = tempval;
			}
			
		]]>
	</fx:Script>
	<s:HGroup width="300" height="50" horizontalAlign="center" gap="0" >
		<s:Image width="46" height="50" mouseOut="gOut(event)" mouseOver="gOver(event)"
				 mouseDown="gDown(event)" source="assets/tipminus.png" click="tipgo(-1);"/>
		<s:Image width="205" height="50" scaleMode="stretch" source="assets/tipback.png"/>
		<s:Image width="47" height="50" mouseOut="gOut(event)" mouseOver="gOver(event)" 
				 mouseDown="gDown(event)" source="assets/tipplus.png" click="tipgo(1);"/>

	</s:HGroup>
	<s:HSlider id="tslide" x="47" y="10" width="205" maximum="100" minimum="0" stepSize="1" value="0"/>
	
		
	
