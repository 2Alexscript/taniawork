			<s:VGroup width="50%" height="100%" gap="6" horizontalAlign="center" verticalAlign="middle">
				<components:homeItem special="true"   lbl="Daily Deals" imagetype="../assets/homeimages/home-dailydeals.png" click="homeGo(0);"  />
				<components:homeItem   lbl="Find a Fav" imagetype="../assets/homeimages/home-findafav.png" click="homeGo(2);" />	
				<components:homeItem   lbl="Reciepts" imagetype="../assets/homeimages/home-receipt.png" click="homeGo(4);"  />
			</s:VGroup>
			<s:VGroup width="50%" height="100%" gap="6" horizontalAlign="center" verticalAlign="middle">
				<components:homeItem   lbl="My Deals" imagetype="../assets/homeimages/home-mydeals.png" click="homeGo(1);"  />
				<components:homeItem   lbl="My Favs" imagetype="../assets/homeimages/home-myfav.png" click="homeGo(3);"  />
				<components:homeItem   lbl="Settings" imagetype="../assets/homeimages/home-settings.png" click="homeGo(5);"  />
			</s:VGroup>
		</s:HGroup>		
		</s:Scroller>
	<s:Scroller id="scroller2" visible="false" left="0" right="0" top="0" bottom="0" verticalScrollPolicy="on" horizontalScrollPolicy="off" >
		<s:VGroup  width="50%" height="100%" horizontalCenter="0">
			<s:HGroup width="100%" height="50%" gap="6" horizontalAlign="center" verticalAlign="middle">
				<components:homeItem special="true"   lbl="Daily Deals" imagetype="../assets/homeimages/home-dailydeals.png" click="homeGo(0);"  />
				<components:homeItem   lbl="Find a Fav" imagetype="../assets/homeimages/home-findafav.png" click="homeGo(2);" />	
				<components:homeItem   lbl="Reciepts" imagetype="../assets/homeimages/home-receipt.png" click="homeGo(4);"  />
			</s:HGroup>
			<s:HGroup width="100%" height="50%" gap="6" horizontalAlign="center" verticalAlign="middle">
				<components:homeItem   lbl="My Deals" imagetype="../assets/homeimages/home-mydeals.png" click="homeGo(1);"  />
				<components:homeItem   lbl="My Favs" imagetype="../assets/homeimages/home-myfav.png" click="homeGo(3);"  />
				<components:homeItem   lbl="Settings" imagetype="../assets/homeimages/home-settings.png" click="homeGo(5);"  />
			</s:HGroup>
		</s:VGroup>		
	</s:Scroller>
