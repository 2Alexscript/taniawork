						lastindex = endindex;
					}
					for (var i:uint = startindex; i < endindex; i++){
						tempData.addItem(listData[i]);
					}
					//	menuList.height = (tempData.length/2*300)
					
					tempData.refresh();
					
					
					menuList.dataGroup.verticalScrollPosition = previousscrollindex;
					trace( "SET:"+previousscrollindex.toString());
					
					//
				}
				
				if (lastindex <= listData.length-1){
					ti = new Timer(timerdelay,0);
					ti.addEventListener(TimerEvent.TIMER,afterti);
					ti.start(); 
				}
				scrollingCount = 0;
				previousscrollcount = 0;
			}
		]]>
