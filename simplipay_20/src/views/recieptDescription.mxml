<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:model="model.*"  
		viewActivate="view1_activateHandler(event)"
		menuKeyPressed="navigator.popView();" 
		backKeyPressed="navigator.popView();" backgroundColor="#2a3038"
		xmlns:s="library://ns.adobe.com/flex/spark" 
		title="Reciept Detail">
	<s:navigationContent>
		<s:Button label="Back" click="navigator.popView();" fontSize="12"/> 
	</s:navigationContent>
	<s:actionContent>		
	</s:actionContent>
	<fx:Script>
		<![CDATA[
			import flash.geom.ColorTransform;
			import flash.sensors.Geolocation;
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			import mx.rpc.events.ResultEvent;
			import spark.components.supportClasses.StyleableTextField;
			import spark.events.IndexChangeEvent;
			import spark.events.ListEvent;
			import spark.events.ViewNavigatorEvent;
			[Bindable]
			public var googleTravelUrl:String = "";
			import spark.filters.GlowFilter;
			public function profDown(ev:MouseEvent):void {
				var gl:spark.filters.GlowFilter = new GlowFilter(000000,1,5,5,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function profUp(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
				var s:String = "";	
			}
			public function view1_activateHandler(event:Event):void{
			}
			private function onViewDeactivate():void {
			}
			public function tOver(ev:MouseEvent):void {
				ev.currentTarget.setStyle("textDecoration","underline");
			}
			public function tOut(ev:MouseEvent):void {
				ev.currentTarget.setStyle("textDecoration","none");
			}
		]]>
	</fx:Script>	
	
	<s:Scroller  left="0" right="0" top="0" bottom="0"  verticalScrollPolicy="on" horizontalScrollPolicy="off" >
		<s:VGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center" horizontalCenter="0">
			<s:BorderContainer width="308" horizontalCenter="0" backgroundColor="#2a3038" height="100%" borderAlpha="0" backgroundAlpha="0">
				<s:Image y="0" left="0" right="0" horizontalCenter="0"  verticalCenter="0" height="300" alpha="1" scaleMode="stretch"
						 source="assets/dailydealsreceiptbg.png"/>
				<s:Label id="s0" height="20" color="#0A4972" fontSize="20" fontWeight="bold"
						 horizontalCenter="0" text="RECEIPT"
						 verticalCenter="-117"/>
				<s:VGroup width="275" height="152" gap="8" horizontalCenter="0" verticalCenter="0">
					<s:BorderContainer width="100%" height="32" backgroundAlpha="0" borderAlpha="0">
						<s:HGroup left="0" width="50%" height="100%" verticalAlign="middle"
								  verticalCenter="0">
							<s:Image source="assets/cal.png"/>
							<s:Label id="s5" left="5" height="100%" color="#2A3038" fontSize="14"
									 fontWeight="bold" text="{data.day}/{data.month}/{data.year}"
									 verticalAlign="middle" verticalCenter="0"/>
						</s:HGroup>
						<s:HGroup right="0" width="50%" height="100%" verticalAlign="middle"
								  verticalCenter="0" horizontalAlign="right">
							<s:Label id="s6" right="5" height="100%" color="#2A3038" fontSize="14"
									 fontWeight="bold" text="{data.time}" verticalAlign="middle"
									 verticalCenter="0"/>
							<s:Image right="15" source="assets/clock.png" verticalCenter="0"/>
							
						</s:HGroup>
						
						
					</s:BorderContainer>
					<s:VGroup width="100%">
						<s:Label id="s1" left="14"  height="20" color="#2A3038"
								 fontSize="20" fontWeight="bold" text="{data.locationname}" />
						<s:Label id="s8" left="14"  height="20" color="#2A3038"
								 fontSize="18" fontWeight="normal" text="{data.description}" />
					</s:VGroup>
					<s:BorderContainer height="1" visible="false" width="100%" borderAlpha="1" borderColor="#8a8a8a"/>
					
					<s:BorderContainer width="100%" height="20" borderAlpha="0" backgroundAlpha="0" >
						<s:Label    height="20" color="#2A3038" left="0"
								 fontSize="14"  text="Price:" />
						<s:Label   height="20" color="#2A3038"  right="0"
								 fontSize="14"  text="${data.price}" />
					</s:BorderContainer>
					<s:BorderContainer width="100%" height="20" borderAlpha="0" backgroundAlpha="0" >
						<s:Label  visible="{data.tip != '-1'}"  height="20" color="#2A3038"
								 fontSize="14"  text="Tip:" left="0"/>
						<s:Label  visible="{data.tip != '-1'}"  height="20" color="#2A3038"
								 fontSize="14" text="%{data.tip}" right="0"/>
					</s:BorderContainer>
					<s:BorderContainer height="1" width="100%" borderAlpha="1" borderColor="#8a8a8a"/>
					<s:BorderContainer width="100%" height="40" borderAlpha="0" backgroundAlpha="0" >
						<s:Label left="0" height="20" color="#2A3038" fontSize="14" fontWeight="bold"
								 text="Subtotal:" verticalCenter="0"/>
						<s:Label    height="40" color="#EF7716" right="0"
								 fontSize="25" fontWeight="bold" text="${data.total}"/>
					</s:BorderContainer>
					
					
				</s:VGroup>
			</s:BorderContainer>
		</s:VGroup>		
	</s:Scroller>
</s:View>