<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark">
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
		<s:State name="up"/>
	</s:states>
	<s:BorderContainer width="100%" height="100%" borderAlpha="0" backgroundAlpha="0">
		<s:HGroup width="98%" horizontalCenter="0" height="100%">
			<s:VGroup width="100%" paddingTop="5" paddingBottom="5" height="100%" verticalAlign="middle" horizontalAlign="left">
				<s:Label color="#000000" fontSize="15" fontWeight="bold" text="{data.storename}"></s:Label>
				<s:VGroup width="100%" height="50%">
					<s:Label color="#000000" width="100%"  fontSize="15" text="Checklist: {data.checklistname}"></s:Label>
					

					<s:Label color="#000000"  fontSize="15" text="Alert Date: {data.date}"></s:Label>
					<s:Label color="#000000"  fontSize="15" text="Alert Time: {data.time}"></s:Label>

				</s:VGroup>
				<s:Label color="#000000"  fontSize="15" text="Value : {data.value}"></s:Label>
			</s:VGroup>	
		</s:HGroup>
	</s:BorderContainer>
	<s:BorderContainer bottom="0" width="100%" backgroundAlpha="0"
					   borderAlpha="1"  borderColor="#dcdcdc" height="1" />
</s:ItemRenderer>