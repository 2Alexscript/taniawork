<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"  
				autoDrawBackground="false" contentBackgroundAlpha="0" 
				mouseOver="gOver(event);" mouseDown="gDown(event);"
				mouseOut="gOut(event);" mouseUp="gOut(event);"
				mouseChildren="false">
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
	</s:states>   
	<fx:Script source="../func/smallglobal.as"/>
<s:Group width="100%" height="{125/(320/Capabilities.screenDPI)}">
	<s:BitmapImage left="{30/(320/Capabilities.screenDPI)}" verticalCenter="0"  
	 contentLoader="{s_imageCache}" source="{data.img}"/>
	<s:Label left="{135/(320/Capabilities.screenDPI)}" color="#5d5958" 
			 styleName="textsize2" text="{data.name}" verticalCenter="0"/>
</s:Group>
</s:ItemRenderer>