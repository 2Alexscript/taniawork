<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import spark.filters.GlowFilter;
			public function profDown(ev:MouseEvent):void {
				var gl:spark.filters.GlowFilter = new GlowFilter(000000,1,5,5,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function profUp(ev:MouseEvent):void {
				ev.currentTarget.filters = [];				
			}
			public function gOver(ev:MouseEvent):void {
				var gl:spark.filters.GlowFilter = new GlowFilter(000000,0.4,20,20,5,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function gDown(ev:MouseEvent):void {
				var gl:GlowFilter = new GlowFilter(0x0a4972,0.4,200,200,50,1,true);
				ev.currentTarget.filters = [gl];
			}
			public function gOut(ev:MouseEvent):void {
				ev.currentTarget.filters = [];
			}
			public function emode(u:uint):void {
				data.estatus = u;
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
		<s:State name="up"/>
	</s:states>
	<s:BorderContainer width="100%" height="100%" 
					  borderAlpha="0" backgroundAlpha="0" 
					  visible="{data.editmode == 0}">
		<s:VGroup width="95%" horizontalCenter="0" paddingTop="4" height="100%" >
			<s:Label color="#000000" fontSize="15" maxDisplayedLines="1"
					 fontFamily="proximaNovacff"  maxWidth="300" text="{data.name}"
					 left="0" verticalCenter="0"></s:Label>
			<s:Label color="#000000" fontSize="15"  maxWidth="300"
					 fontFamily="proximaNovacff" visible="{data.alert != '-1'}" text="Type: {data.typeword}"
					 left="0" verticalCenter="0"></s:Label>
			<s:Label color="#000000" fontSize="15"  maxWidth="300" 
					 fontFamily="proximaNovacff" visible="{data.alert != '-1'}" text="Alert: {data.alertdisplay}"
					 left="0" verticalCenter="0"></s:Label>
			<s:Label color="#000000" fontSize="15"  maxWidth="300" 
					 fontFamily="proximaNovacff" visible="{data.alert != '-1'}" text="Alert Value: {data.actualalertvalue}"
					 left="0" verticalCenter="0"></s:Label>
		</s:VGroup>
	</s:BorderContainer>
	<s:BorderContainer width="100%" height="100%"  borderAlpha="0" backgroundAlpha="0" 
					  visible="{data.editmode == 1}">
		<s:Group width="95%" height="100%" horizontalCenter="0">
			<s:Label left="0" color="#000000" maxDisplayedLines="1" 
					 maxWidth="300" fontSize="15" text="{data.name}" verticalCenter="-21"></s:Label>
			
			<s:HGroup  bottom="1" right="1" gap="20">
				<s:Image  mouseOut="gOut(event)" mouseOver="gOver(event)" mouseDown="gDown(event);"
						  click="emode(0);" >
					<s:source>
						<s:MultiDPIBitmapSource source160dpi="@Embed('assets/pocketicons/ItemActions_DeleteTrashCan.png')"
												source240dpi="@Embed('assets/pocketicons/ItemActions_DeleteTrashCan@2x.png')"
												source320dpi="@Embed('assets/pocketicons/ItemActions_DeleteTrashCan@2x.png')"/>
					</s:source>
				</s:Image>
				
				
				<s:Image  mouseOut="gOut(event)" mouseOver="gOver(event)" mouseDown="gDown(event);"
						  click="emode(1);" >
					<s:source>
						<s:MultiDPIBitmapSource source160dpi="@Embed('assets/pocketicons/LeftSideMenu_Settings.png')"
												source240dpi="@Embed('assets/pocketicons/LeftSideMenu_Settings@2x.png')"
												source320dpi="@Embed('assets/pocketicons/LeftSideMenu_Settings@2x.png')"/>
					</s:source>
				</s:Image>
			</s:HGroup>
		</s:Group>
	</s:BorderContainer>
	<s:BorderContainer bottom="0" width="100%" backgroundAlpha="0"
					   borderAlpha="1"  borderColor="#dcdcdc" height="1" />
</s:ItemRenderer>