<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"  
				 contentBackgroundAlpha="0"	>
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>   
	<fx:Script source="../func/globalFunctions.as"/>
	<fx:Declarations>
		<s:GlowFilter id="selectionglow"
			alpha="1" strength="200" knockout="true"
			color="0x43c7ae"  blurX="30" blurY="30"
			inner="true"
			/>
	</fx:Declarations>
<s:BorderContainer width="100%" height="{90/(320/Capabilities.screenDPI)}" backgroundColor.normal="#5b5b5b"
   backgroundColor.selected="#494949" 
   borderVisible="false"  backgroundAlpha="1">
	<s:BitmapImage left="{30/(320/Capabilities.screenDPI)}" verticalCenter="0"  
	 filters.selected="{[selectionglow]}"
	 filters.normal="[]"  source="{data.img}"/>
	<s:Label left="{90/(320/Capabilities.screenDPI)}" color="#FFFFFF" styleName="textsize1" text="{data.name}" verticalCenter="0"
			 filters.normal="[]" fontWeight="bold"
			 filters.selected="{[selectionglow]}"/>
	<s:BorderContainer height="1.5" width="100%" bottom="0" backgroundAlpha="1" 
					   borderVisible="false" backgroundColor="#FFFFFF"/>
</s:BorderContainer>
</s:ItemRenderer>