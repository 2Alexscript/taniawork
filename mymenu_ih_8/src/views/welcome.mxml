<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:s="library://ns.adobe.com/flex/spark"
		xmlns:controls="com.flexcapacitor.controls.*"
		xmlns:components="components.*" xmlns:cs="cs.*"
		 creationComplete="init(event)"
		contentBackgroundAlpha="1" accentColor="#f3f3f3"
		contentBackgroundColor="#f3f3f3"
		backgroundColor="#43c7ae" actionBarVisible="false"
		backgroundAlpha="1"  >
	<fx:Script  source="../func/globalFunctions.as"/>
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			[Bindable]
			public var locationid:String = '5';
			public var listData:ArrayCollection = new ArrayCollection();
			protected function afterGetInfo(ev:ResultEvent):void
			{
				// TODO Auto-generated method stub
				listData = new  ArrayCollection();
				try{			
					listData = ev.result[0].ress.res;		
				}
				catch(e:Error){
					try{	
						listData.addItem(ev.result[0].ress.res);
					}
					catch(e:Error){}
				}
				var stop:String = "";
				img1.source = listData[0].business_picture;
			}
			
			protected function init(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				getLocationInfo.send();
			}
			
		]]>
	</fx:Script>
	<fx:Script source="../func/loadingfunctions.as"/>
	
	<fx:Declarations>		
		<s:HTTPService id="getLocationInfo" method="GET" resultFormat="array"
					   url="http://www.mymenuapp.ca/php/mobile/getLocationInfo.php"
					   result="afterGetInfo(event)">
			<s:request xmlns="">
				<locationid>{locationid}</locationid>		
			</s:request>
		</s:HTTPService>
	</fx:Declarations>
	<s:VGroup width="100%" gap="10" height="100%" horizontalAlign="center" verticalAlign="top">
		<s:Group width="100%" height="{img1.height}"   id="megacont"  >
			<s:Image id="img1"  width="{this.width/2}"  
					 horizontalAlign="center"  height="{(this.width/2)/(640/300)}"
					 horizontalCenter="0" top="0" />
		</s:Group>
		<s:Image >
			<s:source>
				<s:MultiDPIBitmapSource source160dpi="@Embed('assets/160/loginmenulogo.png')"
										source240dpi="@Embed('assets/240/loginmenulogo.png')"
										source320dpi="@Embed('assets/320/loginmenulogo.png')"
										source480dpi="@Embed('assets/320/loginmenulogo.png')"
										source640dpi="@Embed('assets/320/loginmenulogo.png')"
										/>
			</s:source>
		</s:Image>
		<components:transbutton  mouseDown="gDown(event);" mouseOver="gOver(event);"
								 mouseOut="gOut(event);" mouseUp="gOut(event);" textLabel="Start Now" horizontalCenter="0" />
		
	</s:VGroup>
</s:View>