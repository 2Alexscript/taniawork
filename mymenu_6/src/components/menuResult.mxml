<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark">
	<s:VGroup height="95%" width="100%" gap="0">
		<s:HGroup width="100%" height="100%" gap="0">
			<s:VGroup paddingLeft="10" paddingTop="10" width="75%" height="100%" gap="0">
				<s:Group >
					<s:Label   height="100%"  maxWidth="{(this.width/4)*3}" color="#C60707" visible="{data.goodforme == 'no'}"
							 fontWeight="bold" styleName="textsize2" text="{data.name}"
							 verticalAlign="middle"></s:Label>
					<s:Label height="100%" maxWidth="{(this.width/4)*3}"  color="#19B400"  visible="{data.goodforme == 'yes'}"
							 fontWeight="bold" styleName="textsize2" text="{data.name}"
							 verticalAlign="middle"></s:Label>
				</s:Group>
				<s:Label color="#777777"  styleName="textsize4" fontStyle="italic" 
						 text="${data.cost}"></s:Label>
				<s:Label color="#777777" styleName="textsize4"  text="{data.status}"></s:Label>
			</s:VGroup>
			<s:BitmapImage x="5"  y="5" id="bmpImg"  width="{this.width/4}" 
						   height="{this.width/4}" source="{data.picture}" 
						    scaleMode="stretch"  >
				<s:mask>
					<s:BorderContainer id="bmpMask"
									   cornerRadius="8"
									   width="{bmpImg.width}" height="{bmpImg.height}" />
				</s:mask>
			</s:BitmapImage>
			</s:HGroup>
		<s:BorderContainer bottom="0" width="100%" backgroundAlpha="0" borderAlpha="0.5"  borderColor="#FFFFFF" height="1" />
	</s:VGroup>	
</s:ItemRenderer>