<?xml version="1.0" encoding="utf-8"?>
<s:View 
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    title="Query"
    keyDown="this_keyDownHandler(event)">
    <fx:Script>
        <![CDATA[
            private function this_keyDownHandler(event:KeyboardEvent):void
            {
                if (event.keyCode === Keyboard.SEARCH)
                {
                    pushView();
                }
            }

            private function pushView():void
            {
                navigator.pushView(QueryExecuteView, whereInput.text);
				
            }
        ]]>
    </fx:Script>
    <s:actionContent>
        <s:Button 
            icon="@Embed('/assets/search.png')"
            click="pushView()"/>
    </s:actionContent>
    <s:TextInput id="whereInput"
        width="100%"
        left="5" right="5" top="10"
        text="STATE_NAME like 'M%'"/>
</s:View>
